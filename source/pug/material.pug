include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.png", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            .card-body
                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('1', 'Presentación', 'main.html#page/#tema-1/')
                                    +navTemaItem('2', 'Introducción importancia de la Toma de muestra', 'main.html#page/#tema-2/')
                                    +navTemaItem('3', 'Bases conceptuales, características y tipos de contaminación en el agua, suelo y aire', 'main.html#page/#tema-3/')
                                    +navTemaItem('4', 'Alistamiento de la toma de muestras', 'main.html#page/#tema-4/')
                                    +navTemaItem('5', 'Consideraciones a tener en cuenta en el sitio de muestreo', 'main.html#page/#tema-5/')
                                    +navTemaItem('6', 'Equipos y materiales para la toma de muestras y análisis in situ', 'main.html#page/#tema-6/')
                                    +navTemaItem('7', 'Reconocimiento de material de laboratorio para análisis físicos químicos y microbiológico de las muestras', 'main.html#page/#tema-7/')
                                    +navTemaItem('8', 'Calibración de equipos, fichas técnicas y manuales', 'main.html#page/#tema-8/')

        section#mainContent         
            #tema-1
                include pages/1-tema.pug
            #tema-2
                include pages/2-tema.pug
            #tema-3
                include pages/3-tema.pug
            #tema-4
                include pages/4-tema.pug
            #tema-5
                include pages/5-tema.pug
            #tema-6
                include pages/6-tema.pug
            #tema-7
                include pages/7-tema.pug
            #tema-8
                include pages/8-tema.pug
            #glosario
                include pages/glosario.pug
            #anexos
                include pages/material-complementario.pug
            #referencias
                include pages/referencias.pug

        +creditosFooter("assets/images/logos/senaLogo.svg")

        a.scroll-to-top-btn
            .fa.fa-angle-up.fa-2x

        script(src="assets/js/vendor.js")
        script(src="js/local.js")